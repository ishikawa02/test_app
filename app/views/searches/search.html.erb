<div class="container">
  <div class="row">
  	<h2>検索結果</h2>
  	<% if @topics.exists? %>
    	<table class="table">
  	  	<thead>
  	  		<tr>
  	  			<th></th>
  	  			<th></th>
  	  			<th>レス数</th>
  	  		</tr>
  	  	</thead>
  	  	<% @topics.each do |topic| %>
  	  	<tbody>
  	  		<tr>
  	  			<td width="10%"><%= topic.created_at.strftime("%Y/%m/%d %H:%M") %></td>
  	  			<td>
  	  			  <%= link_to topic_path(topic) do %>
  	    		    <%= topic.title %>
  	              <% end %>
  	            </td>
  	            <td width="10%"><%= topic.responses.count %>件</td>
  	  		</tr>
  	  		<tr>
  	  		  <td colspan="3"><%= truncate(topic.body, length: 100) %></td>
  	  		</tr>
  	  	</tbody>
  	  	<% end %>
  	  </table>
    <% else %>
      <h3 class="result">一致する結果がありませんでした。</h3>
    <% end %>
  </div>
</div>

